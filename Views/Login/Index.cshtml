<div id="login" class="jumbotron">
    <div class="container pt-5 pb-5">
        <form class="col-xl-6 col-lg-8 col-md-10 offset-xl-3 offset-lg-2 offset-md-1" method="POST" action="/login/login" onsubmit="return login()">
            <h4>登入</h4><br>
            <div id="error-message"></div>
            <input id="username" class="form-control" type="text" placeholder="帳號" required pattern="^(?=.*\d)(?=.*[a-z]).{8,30}$"><br>
            <input id="password" class="form-control"  type="password" placeholder="密碼" required pattern="^(?=.*\d)(?=.*[a-z]).{8,30}$"><br>
            <button class="btn btn-secondary form-control" type="submit">登入</button>
            <span><a href="/login/signup" onclick="inheritQueryString(this)">註冊新帳號</a></span>
        </form>
    </div>
</div>

@section styles {
    <link rel="stylesheet" type="text/css" href="/ViewAssets/Login/index.css">
}
@section footscripts {
    <script type="text/javascript" src="/ViewAssets/Login/index.js"></script>
}